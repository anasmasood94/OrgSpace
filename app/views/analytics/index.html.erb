<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Organization</h1>
</div>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header">
        <h5>Organization</h5>
      </div>
      <div class="card-body">
        <div class="list-group">
          <% @organizations.each do |organization| %>
            <%= link_to organization_path(organization), class: "list-group-item list-group-item-action" do %>
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1"><%= organization.name %></h6>
                <small><%= organization.member_count %> members</small>
              </div>
              <small class="text-muted"><%= organization.domain %></small>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>