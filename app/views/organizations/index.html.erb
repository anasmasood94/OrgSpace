<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Organization</h1>
  <% if current_user.admin? && admin_organizations_for(current_user).empty? %>
    <%= link_to "New Organization", new_organization_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row">
  <% @organizations.each do |organization| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= organization.name %></h5>
          <p class="card-text"><%= organization.description %></p>
          <p class="card-text">
            <small class="text-muted">
              Members: <%= organization.member_count %>
            </small>
          </p>
          <div class="d-flex justify-content-between gap-2 mt-3">
            <%= link_to "View", organization_path(organization), class: "btn btn-outline-primary flex-grow-1" %>
            <% if current_user.has_permission?('edit_organization', organization) %>
              <%= link_to "Edit", edit_organization_path(organization), class: "btn btn-outline-secondary flex-grow-1" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>